// Schema Prisma per l'API serverless
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Usa POSTGRES_PRISMA_URL per prima
  directUrl = env("DATABASE_URL") // Usato per migrazione o se POSTGRES_PRISMA_URL non è disponibile
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  password      String
  name          String?
  role          Role       @default(USER)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  expiresAt     DateTime?  // Data di scadenza dell'account
  favorites     Favorite[]
  recentlyViewed Document[] @relation("RecentlyViewed")
  documents     Document[]
  chatSessions  ChatSession[]

  @@map("users")
}

model Document {
  id              String     @id @default(uuid())
  title           String
  description     String?
  filePath        String     @unique
  fileUrl         String
  fileSize        Int
  uploadDate      DateTime   @default(now())
  viewCount       Int        @default(0)
  downloadCount   Int        @default(0)
  favoriteCount   Int        @default(0)
  keywords        String[]   @default([])
  content         String?    // Campo per memorizzare il testo estratto dal PDF
  cities          String[]   @default([]) // Campo per memorizzare le città associate al documento
  uploadedBy      String?
  textContent     String?    @db.Text
  relatedDocuments Document[] @relation("RelatedDocuments")
  documents       Document[] @relation("RelatedDocuments")
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  favorites       Favorite[]
  viewedBy        User[]       @relation("RecentlyViewed")

  @@map("documents")
}

model Favorite {
  id         String   @id @default(uuid())
  userId     String
  documentId String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([userId, documentId])
  @@map("favorites")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatSession {
  id        String   @id @default(uuid())
  userId    String
  messages  Json[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("chat_sessions")
} 