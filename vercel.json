{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/api/(.*)", "dest": "/api?path=$1" },
    { "src": "/api/auth/(.*)", "dest": "/api?path=auth/$1" },
    { "src": "/api/users/(.*)", "dest": "/api?path=users/$1" },
    { "src": "/api/documents/(.*)", "dest": "/api?path=documents/$1" },
    { "src": "/api/clients/(.*)", "dest": "/api?path=clients/$1" },
    { "src": "/api/test", "dest": "/api?path=test" },
    { "src": "/api/(.*)", "dest": "/api?path=$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgres://neondb_owner:npg_FRsC1c8YaJdz@ep-aged-art-a2904ttw-pooler.eu-central-1.aws.neon.tech/neondb?sslmode=require",
    "POSTGRES_PRISMA_URL": "postgres://neondb_owner:npg_FRsC1c8YaJdz@ep-aged-art-a2904ttw-pooler.eu-central-1.aws.neon.tech/neondb?pgbouncer=true&connect_timeout=15&sslmode=require",
    "JWT_SECRET": "itfplus_jwt_secret_key",
    "API_DEBUG_MODE": "true"
  }
} 